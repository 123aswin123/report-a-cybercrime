{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@azure/storage-blob": "^12.1.0",
    "@chakra-ui/core": "^0.5.2",
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@lingui/react": "^3.0.0-7",
    "@reach/component-component": "^0.8.0",
    "async": "^3.1.1",
    "azure-cognitiveservices-contentmoderator": "^4.1.1",
    "babel-plugin-macros": "^2.8.0",
    "body-parser": "^1.19.0",
    "child_process": "^1.0.2",
    "chroma-js": "^2.1.0",
    "clamdjs": "^1.0.2",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "emotion-theming": "^10.0.27",
    "express": "^4.17.1",
    "final-form": "^4.18.7",
    "formidable": "^1.2.1",
    "get-user-locale": "^1.3.0",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.2",
    "isomorphic-unfetch": "^3.0.0",
    "ldapjs": "^1.0.2",
    "mongodb": "^3.5.2",
    "ms-rest-azure": "^3.0.0",
    "nanoid": "^2.1.11",
    "nodemailer": "^6.4.2",
    "notifications-node-client": "^4.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-final-form": "^6.3.5",
    "react-ga": "^2.6.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.1",
    "styled-system": "^5.1.4",
    "unidecode": "^0.1.8",
    "cypress-cucumber-preprocessor": "^2.0.1"
  },
  "scripts": {
    "prod": "npm run build && node server.js",
    "build": "react-scripts build",
    "start": "NODE_ENV=production node server.js",
    "test": "SELF_HARM_WORDS= react-scripts test --watchAll=false",
    "coverage": "SELF_HARM_WORDS= react-scripts test --coverage --watchAll=false",
    "watch": "react-scripts test",
    "dbg": "react-scripts --inspect-brk test --watchAll=false --runInBand",
    "eject": "react-scripts eject",
    "start:cypress": "npm run dev",
    "cypress:open": "node ./node_modules/.bin/cypress open ",
    "cypress": "start-server-and-test start:cypress http://localhost:3000 cypress:open",
    "cypress:run": "node ./node_modules/.bin/cypress-tags run -e TAGS='@smoke'",
    "cypress:cli": "start-server-and-test http://localhost:3000 cypress:run",
    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports",
    "pretest": "npm run clean:reports",
    "scripts": "cypress run",
    "combine-reports": "mochawesome-merge --reportDir cypress/reports/mocha > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "cypress-report": "npm run scripts || npm run posttest",
    "dev": "react-scripts start",
    "lint": "eslint --max-warnings=0 'src/**/*.js'",
    "add-locale": "lingui add-locale",
    "extract": "lingui extract --clean",
    "compile": "lingui compile",
    "check-translations": "node utils/checkTranslations.js",
    "upgrade-interactive": "npm-check --update"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Running npm run extract' && lingui extract --clean && git add src/locales && pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/polyfill": "^7.8.3",
    "@lingui/cli": "^3.0.0-7",
    "@lingui/loader": "^3.0.0-7",
    "@lingui/macro": "^3.0.0-7",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "axe-core": "^3.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "chance": "^1.1.3",
    "cypress": "^3.8.3",
    "cypress-axe": "^0.5.3",
    "cypress-cucumber-preprocessor": "^2.0.1",
    "cypress-file-upload": "^3.5.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "husky": "^4.0.10",
    "jest-emotion": "^10.0.17",
    "mocha": "^7.0.1",
    "mochawesome": "^4.1.0",
    "mochawesome-merge": "^4.0.0",
    "mochawesome-report-generator": "^4.1.0",
    "npm-check": "^5.9.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "recompose": "^0.30.0",
    "start-server-and-test": "^1.10.8",
    "waait": "^1.0.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
